{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "types",
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/global.d.ts",
    "src/auto-imports.d.ts",
    "src/components.d.ts",
    "src/types/**/*.d.ts"
  ]
}
